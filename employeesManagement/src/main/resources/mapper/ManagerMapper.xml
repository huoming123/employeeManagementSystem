<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.employeesManagement.mapper.ManagerMapper">

    <resultMap type="com.design.employeesManagement.pojo.Manager" id="ManagerMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userNo" column="user_no" jdbcType="VARCHAR"/>
        <result property="telephone" column="telephone" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="images" column="images" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ManagerMap">
        select
          id, user_no, telephone, user_name, password, created_at, images
        from manager
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="increased" keyProperty="id" useGeneratedKeys="true">
        insert into manager(user_no, telephone, user_name, password, created_at, images)
        values (#{userNo}, #{telephone}, #{userName}, #{password}, #{createdAt}, #{images})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageSearchByCondition" resultMap="ManagerMap">
        select *  from manager
            <!--排序 desc是降序-->
        order by
        id desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageSearchCount" resultType="int">
        select count(id) as count from manager   
    </select>

   

    <!--通过主键修改数据-->
    <update id="edit">
        update manager
        <set>
            <if test="userNo != null and userNo != ''">
                user_no = #{userNo},
            </if>
            <if test="telephone != null and telephone != ''">
                telephone = #{telephone},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="images != null and images != ''">
                images = #{images},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from manager where id = #{id}
    </delete>
     <select id="getByUserNo" resultMap="ManagerMap">
         select * from manager where user_no=#{userNo};
     </select>
</mapper>

