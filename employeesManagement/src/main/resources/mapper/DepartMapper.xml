<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.employeesManagement.mapper.DepartMapper">

    <resultMap type="com.design.employeesManagement.pojo.Depart" id="DepartMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="depart" column="depart" jdbcType="VARCHAR"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DepartMap">
        select
          id, created_at, depart, created_by
        from depart
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into depart(created_at, depart, created_by)
        values (now(), #{depart}, #{createdBy})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="DepartMap">
       <!-- <if test="page.key.userName != null and page.key.userName != ''">
            and  a.user_name like '%' #{page.key.userName}  '%'
        </if>
        <if test="page.key.year != null ">
            <bind name="pattern" value="'%' + page.key.year + '%'" />
            and a.created_at like #{pattern}
        </if>-->
        select *  from depart
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from depart   
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update depart
        <set>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="depart != null and depart != ''">
                depart = #{depart},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from depart where id = #{id}
    </delete>
    <!--获取部门下来数据-->
     <select id="getDepartList" resultMap="DepartMap">
         select * from depart where created_at is not null ;
     </select>
</mapper>

